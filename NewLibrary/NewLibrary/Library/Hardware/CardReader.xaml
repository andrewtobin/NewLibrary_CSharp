<Window x:Class="NewLibrary.Library.Hardware.CardReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewLibrary.Library.Hardware"
        mc:Ignorable="d"
        Title="CardReader" Height="300" Width="300">
    <Grid Background="#FF47E416">
        <Label x:Name="label" Content="Card Reader" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="26.667"/>
        <Label x:Name="label1" Content="Swipe Borrowing Card:" HorizontalAlignment="Left" Margin="10,84,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="cardDataBox" HorizontalAlignment="Left" Height="30" Margin="70,130,0,110" TextWrapping="Wrap" Text="borrower id" VerticalAlignment="Center" Width="150" FontSize="18"/>
        <Button x:Name="swipeButton" Content="Swipe" HorizontalAlignment="Left" Margin="95,188,0,0" VerticalAlignment="Top" Width="102" FontSize="18.667" Height="33" Click="swipeButton_Click"/>
        <Label x:Name="errorMesgLabel" Content="" HorizontalAlignment="Left" Margin="10,241,0,0" VerticalAlignment="Top" Width="274" Foreground="Red" FontWeight="Bold"/>

    </Grid>
</Window>
