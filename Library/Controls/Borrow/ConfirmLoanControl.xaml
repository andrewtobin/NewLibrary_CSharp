<local:ABorrowControl x:Class="Library.Controls.Borrow.ConfirmLoanControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Controls.Borrow"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="470">
    <Grid Background="#FFE6E6E6">
        <Label x:Name="label" Content="Confirm Loans" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18.667"/>
        <GroupBox x:Name="groupBox" Header="Curent Loan List" HorizontalAlignment="Left" Height="556" Margin="10,30,0,0" VerticalAlignment="Top" Width="450">
            <Grid HorizontalAlignment="Left" Height="541" Margin="0,5,0,-13.2" VerticalAlignment="Top" Width="435">
                <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="531" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Text="TextBox" VerticalAlignment="Top" Width="435"/>
            </Grid>
        </GroupBox>
        <Button x:Name="confirmButton" Content="Confirm" HorizontalAlignment="Left" Margin="55,630,0,0" VerticalAlignment="Top" Width="75" Click="confirmButton_Click"/>
        <Button x:Name="rejectButton" Content="Reject" HorizontalAlignment="Left" Margin="205,630,0,0" VerticalAlignment="Top" Width="75" Click="rejectButton_Click"  />
        <Label x:Name="errorMessage" Content="Error Messages" HorizontalAlignment="Left" Margin="10,665,0,0" VerticalAlignment="Top" Width="280" Foreground="#FFF60C0C"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="345,630,0,0" VerticalAlignment="Top" Width="76" Click="cancelButton_Click"/>

    </Grid>
</local:ABorrowControl>
